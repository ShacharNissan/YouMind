<!--        app:layout_constraintTop_toTopOf="parent"   />-->

    <ImageView
        android:id="@+id/image_table_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/text_table_title"
        android:layout_alignStart="@+id/text_table_title"
        android:layout_alignEnd="@+id/text_table_title"
        android:layout_marginTop="1dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="@+id/text_table_title"
        app:layout_constraintStart_toStartOf="@+id/text_table_title"
        app:layout_constraintTop_toBottomOf="@+id/text_table_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskTable_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_table_logo"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:id="@+id/button_table_reset"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="317dp"
        android:text="@string/app_name" />

